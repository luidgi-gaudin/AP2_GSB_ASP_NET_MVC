@model AP2_MVC_DOTNET.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Créer un compte";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <h3 class="text-center">Créer un compte</h3>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom_m" class="form-label">Nom :</label>
                <input asp-for="Nom_m" class="form-control" />
                <span asp-validation-for="Nom_m" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom_m" class="form-label">Prénom :</label>
                <input asp-for="Prenom_m" class="form-control" />
                <span asp-validation-for="Prenom_m" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="form-label">Nom d'utilisateur :</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email :</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="form-label">Mot de passe :</label>
                <input asp-for="PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_naissance_m" class="form-label">Date de naissance :</label>
                <input asp-for="Date_naissance_m" type="date" class="form-control" />
                <span asp-validation-for="Date_naissance_m" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Créer un compte</button>
            </div>
        </form>
        <p>Vous avez déjà un compte ? <a asp-action="Login">Connectez-vous</a></p>
    </div>
</div>