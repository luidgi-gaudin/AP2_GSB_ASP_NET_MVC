@model AP2_MVC_DOTNET.Models.Ordonnance

@{
    ViewData["Title"] = "Supprimer Ordonnance";
}

<h2>Confirmer la suppression</h2>

<p>Êtes-vous sûr de vouloir supprimer cette ordonnance ?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.DateCréation.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" asp-controller="Ordonnance" method="post">
    <input type="hidden" asp-for="OrdonnanceId" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>