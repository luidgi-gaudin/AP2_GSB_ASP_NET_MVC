@model AP2_MVC_DOTNET.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Contactez-nous</h2>

    <!-- Message de confirmation -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <!-- Formulaire de contact -->
    <form asp-action="Submit" asp-controller="Contact" method="post" class="needs-validation" novalidate>
        <div class="form-group mb-3">
            <label asp-for="Name">Nom</label>
            <input asp-for="Name" class="form-control" placeholder="Votre nom" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Votre email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Subject">Sujet</label>
            <input asp-for="Subject" class="form-control" placeholder="Sujet du message" />
            <span class="text-danger" asp-validation-for="Subject"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Message">Message</label>
            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Votre message..."></textarea>
            <span class="text-danger" asp-validation-for="Message"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-envelope"></i> Envoyer
        </button>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>