@model AP2_MVC_DOTNET.ViewModels.PatientDetailsViewModel
@{
    Layout = null;
}
<div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Patient.PatientId" /> 
        <input type="hidden" asp-for="Patient.Sexe_p"/>
        <div>
            <label asp-for="Patient.Num_secu">Numéro de sécurité sociale:</label>
            <input asp-for="Patient.Num_secu" class="form-control"/>
            <br/>
            <label asp-for="Patient.Nom_p">Nom :</label>
            <input asp-for="Patient.Nom_p" class="form-control"/>
            <br/>
            <label asp-for="Patient.Prenom_p">Prenom :</label>
            <input asp-for="Patient.Prenom_p" class="form-control"/>
        </div>
        <div>
            <label>Allergie :</label>
            @foreach(var allergie in Model.Allergies)
            {
                <input type="checkbox" name="selectedAllergies" value="@allergie.AllergieId" class="form-check-input" @(Model.Patient.Allergies.Any(a => a.AllergieId == allergie.AllergieId)? "checked" : "")/>
                <label class="form-check-label">@allergie.Libelle_al</label>
            }
        </div>
        <div>
            <label>Antécédents :</label>
            @foreach(var antecedent in Model.Antecedents)
            {
                <input type="checkbox" name="selectedAntecedents" value="@antecedent.AntecedentId" class="form-check-input" @(Model.Patient.Antecedents.Any(an => an.AntecedentId == antecedent.AntecedentId)? "checked" : "")/>
                <label class="form-check-label">@antecedent.Libelle_a</label>
            }
        </div>
        <br/>
        <a asp-action="Index"asp-controller="Patient" class="btn btn-secondary">Retour a la liste</a>
        <input type="submit" value="Modifier" class="btn btn-primary"/>
    </form>

    <div asp-validation-summary="All" class="alert-danger"></div>
</div>