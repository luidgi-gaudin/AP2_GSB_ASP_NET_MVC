@model AP2_MVC_DOTNET.ViewModels.PatientDetailsViewModel

@{
    ViewBag.Title = "title";
    Layout = null;
}
<div>
    <form asp-action="Add" method="post">
        <div>
            <label asp-for="Patient.Nom_p">Nom :</label>
            <input asp-for="Patient.Nom_p" class="form-control"/>
            <span asp-validation-for="Patient.Nom_p"></span>
        </div>
        <div>
            <label asp-for="Patient.Prenom_p">Prenom :</label>
            <input asp-for="Patient.Prenom_p" class="form-control"/>
            <span asp-validation-for="Patient.Prenom_p"></span>
        </div>
        <div>   
            <label asp-for="Patient.Num_secu">Numéro de sécu:</label>
            <input asp-for="Patient.Num_secu"class="form-control"/>
            <span asp-validation-for="Patient.Num_secu"></span>
        </div>
        <div>
            <label asp-for="Patient.Sexe_p">Sexe :</label>
            <select asp-for="Patient.Sexe_p" class="form-control">
                <option value="H">Homme</option>
                <option value="F">Femme</option>
            </select>
            <span asp-validation-for="Patient.Sexe_p"></span>
        </div>
        <div>
            <label>Allergie :</label>
            @foreach(var allergie in Model.Allergies)
            {
                <input type="checkbox" name="selectedAllergies" value="@allergie.AllergieId" class="form-check-input"/>
                <label class="form-check-label">@allergie.Libelle_al</label>
            }
        </div>
        <div>
            <label>Antécédents :</label>
            @foreach(var antecedent in Model.Antecedents)
            {
                <input type="checkbox" name="selectedAntecedents" value="@antecedent.AntecedentId" class="form-check-input"/>
                <label class="form-check-label">@antecedent.Libelle_a</label>
            }
        </div>
        <br/>
        <a asp-controller="Patient" asp-action="Index" class="btn btn-secondary">Retour a la liste</a>
        <button type="submit" class="btn btn-primary">Ajouter</button>   
    </form>   
    <div asp-validation-summary="All" class="alert-danger"></div>
</div>